# Copier ce fichier vers .env et remplir avec vos vraies valeurs

# MongoDB Atlas - Utilisateur APPLICATION (lecture seule)
MONGODB_URI_APP=mongodb+srv://moviestream_app:app_password@cluster0.xxxxx.mongodb.net/moviestream?retryWrites=true&w=majority&appName=Cluster0

# MongoDB Atlas - Utilisateur ADMIN (lecture/écriture)
MONGODB_URI_ADMIN=mongodb+srv://moviestream_admin:admin_password@cluster0.xxxxx.mongodb.net/moviestream?retryWrites=true&w=majority&appName=Cluster0

# Admin panel password (fort et unique)
ADMIN_PASSWORD=your_very_secure_admin_password_2024

# Encryption key for sensitive data (32 caractères)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# URL du site en production (pour CORS)
SITE_URL=https://your-site.netlify.app

# Environment (production/development)
NODE_ENV=production
